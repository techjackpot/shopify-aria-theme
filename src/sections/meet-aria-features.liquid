<section class="Section Section--spacingNormal Section-Meet-Aria-Features" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="meet-aria-features">
  <div class="Container Container--narrow">
    <div class="Section-Meet-Aria-Features--Header" data-aos="fade-up">
      <div class="section-title">
        <span>{{ section.settings.title }}</span>
      </div>
    </div>
    <div class="Section-Meet-Aria-Features--Content">
      <div class="Feature-List">
        {%- assign block_delay = 0 -%}
        {%- for block in section.blocks -%}
          {%- capture block_delay -%}{{ block_delay | plus: 150 }}{%- endcapture -%}
          <div id="block-{{ block.id }}" class="Feature-Item" {{ block.shopify_attributes }} data-aos="fade" data-aos-delay="{{ block_delay }}">
            <div class="Feature-Item__Container">
              <div class="Feature-Item--Icon">
                {%- if block.settings.image_url != blank -%}
                  <img src="{{ block.settings.image_url }}">
                {%- endif -%}
              </div>
              <div class="Feature-Item--Meta">
                <div class="Feature-Item--Title">
                  <span>{{ block.settings.title }}</span>
                </div>
                <div class="Feature-Item--Description">
                  <span>{{ block.settings.description }}</span>
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Meet Aria - Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "image_url",
          "label": "Icon (url here)"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Meet Aria",
      "name": "Features",
      "settings": {}
    }
  ]
}
{% endschema %}